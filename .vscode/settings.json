{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "stylelint.enable": true,
  "stylelint.validate": ["css", "scss", "less", "postcss"],
  "cSpell.words": [
    "fisica",
    "fisicas",
    "Formulario",
    "juridica",
    "juridicas",
    "Juridicas",
    "Maximo",
    "Minimo",
    "Obrigatorio",
    "stylelint",
    "usuario",
    "Visivel"
  ]
}
